# ============== เบอร์โทรไทยและเลขตามความยาว ==============
Random Thai Phone Data
    [Documentation]    Generate Thai phone and set global variables
    [Arguments]    ${mobile_digits}=10    ${phone_digits}=9
    ${mobile}=     Generate Thai Phone Number    ${mobile_digits}
    ${phoneno}=    Generate Thai Phone Number    ${phone_digits}
    
    Set Global Variable    ${GLOBAL_RANDOM_MOBILE}      ${mobile}
    Set Global Variable    ${GLOBAL_RANDOM_PHONENUM}    ${phoneno}

Random Number Data
    [Documentation]    Generate random numbers with different lengths and set global variables
    [Arguments]    ${length5}=5    ${length8}=8    ${length10}=10
    ${num5}=     Generate Random Number With Length    ${length5}
    ${num8}=     Generate Random Number With Length    ${length8}
    ${num10}=    Generate Random Number With Length    ${length10}
    
    Set Global Variable    ${GLOBAL_RANDOM_NUMBER5}     ${num5}
    Set Global Variable    ${GLOBAL_RANDOM_NUMBER8}     ${num8}
    Set Global Variable    ${GLOBAL_RANDOM_NUMBER10}    ${num10}

Random Text Data
    [Documentation]    Generate random text and set global variables
    [Arguments]    ${length}=8    ${include_numbers}=${True}
    ${text}=    Generate Random Text With Length    ${length}    ${include_numbers}
    Set Global Variable    ${GLOBAL_RANDOM_TEXT}    ${text}

