*** Settings ***
Documentation    Dictionary Style Fake Data Keywords
Library          library/fakerDataGenerator.py

*** Keywords ***
# ============== ข้อมูลส่วนตัว ==============
Random Person Data
    [Documentation]    Generate random person data and set global variables
    [Arguments]    ${locale}=Thai
    ${person}=    Generate Person          ${locale}
    ${id_card}=   Generate Thai ID Card
    
    
    Set Global Variable    ${GLOBAL_RANDOM_FULLNAME}         ${person}[full_name]
    Set Global Variable    ${GLOBAL_RANDOM_FIRSTNAME}        ${person}[first_name]
    Set Global Variable    ${GLOBAL_RANDOM_LASTNAME}         ${person}[last_name]
    Set Global Variable    ${GLOBAL_RANDOM_EMAIL}            ${person}[email]
    Set Global Variable    ${GLOBAL_RANDOM_PHONE}            ${person}[phone]
    Set Global Variable    ${GLOBAL_RANDOM_MOBILE}           ${person}[mobile]
    Set Global Variable    ${GLOBAL_RANDOM_AGE}              ${person}[age]
    Set Global Variable    ${GLOBAL_RANDOM_BIRTHDATE}        ${person}[birth_date]
    Set Global Variable    ${GLOBAL_RANDOM_GENDER}           ${person}[gender]
    Set Global Variable    ${GLOBAL_RANDOM_THAI_IDCARD}      ${id_card}
    Set Global Variable    ${GLOBAL_RANDOM_PASSPORT}         ${person}[passport]

Random Address Data
    [Documentation]    Generate random address data and set global variables
    [Arguments]    ${locale}=Thai
    ${address}=    Generate Address    ${locale}
    
    Set Global Variable    ${GLOBAL_RANDOM_STREET}       ${address}[street_address]
    Set Global Variable    ${GLOBAL_RANDOM_CITY}         ${address}[city]
    Set Global Variable    ${GLOBAL_RANDOM_DISTRICT}     ${address}[district]
    Set Global Variable    ${GLOBAL_RANDOM_PROVINCE}     ${address}[province]
    Set Global Variable    ${GLOBAL_RANDOM_POSTCODE}     ${address}[postcode]
    Set Global Variable    ${GLOBAL_RANDOM_COUNTRY}      ${address}[country]
    Set Global Variable    ${GLOBAL_RANDOM_FULLADDRESS}  ${address}[full_address]

